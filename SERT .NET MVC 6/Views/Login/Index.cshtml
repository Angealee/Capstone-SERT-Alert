@using SertWebApp.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-3">@ViewData["Title"]</h3></div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="form-floating mb-3">
                            @* <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                            <label for="inputEmail">Email address</label> *@
                            <input id="inputUsername" class="form-control" asp-for="Username" placeholder="Username" />
                            <label asp-for="Username"></label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            @* <input class="form-control" id="inputPassword" type="password" placeholder="Password" />
                            <label for="inputPassword">Password</label> *@
                            <input id="inputPassword" class="form-control" type="password" asp-for="Password" placeholder="Password" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Login</button>
                            <a class="small" href="#!">Forgot Password?</a>
                        </div>
                    </form>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
